@using MeteMarcha.Models.Servicos
@model ServicosModel

<div class="container">
    <h3>Serviços</h3>

    <!-- Botão para adicionar novo serviço -->
    <div class="mb-3">
        <a class="btn btn-primary" asp-controller="Servicos" asp-action="Record">
            <i class="bi bi-plus-circle"></i> Novo Serviço
        </a>
    </div>

    <!-- Tabela de serviços -->
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Serviço</th>
                <th>Cliente</th>
                <th>Peça</th>
                <th>Valor do Serviço</th> <!-- Adiciona a coluna de valor -->
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var servico in Model.Servicos)
            {
                <tr>
                    <td>@servico.ID</td>
                    <td>@servico.Nome</td>
                    <td>@servico.ClienteNome</td>  <!-- Exibe o nome do cliente -->
                    <td>@servico.PecaNome</td>     <!-- Exibe o nome da peça -->
                    <td>@servico.PecaValor.ToString("C")</td>  <!-- Exibe o valor do serviço (valor da peça) -->
                    <td>
                        <!-- Botão de Editar -->
                        <a class="btn btn-warning" asp-controller="Servicos" asp-action="Record" asp-route-id="@servico.ID">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>

                        <!-- Formulário para Exclusão -->
                        <form asp-controller="Servicos" asp-action="ConfirmDelete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@servico.ID" />
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Tem certeza que deseja excluir este serviço?');">
                                <i class="bi bi-trash"></i> Excluir
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
