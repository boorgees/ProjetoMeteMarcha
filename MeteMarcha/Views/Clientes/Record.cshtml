@model MeteMarcha.Models.Clientes.ClienteModel;

<div class="container">
    <h3>@(Model.ID > 0 ? "Editar Cliente" : "Novo Cliente")</h3>

    <form asp-controller="Clientes" asp-action="Record" method="post">
        <input type="hidden" asp-for="ID" />

        <div class="mb-3">
            <label class="form-label">Nome</label>
            <input type="text" asp-for="Nome" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Situação</label>
            <select asp-for="Situacao" class="form-control">
                <option value="Ativo">Ativo</option>
                <option value="Inativo">Inativo</option>
            </select>
        </div>

        <button type="submit" name="type" value="save" class="btn btn-success">Salvar</button>
        <a asp-controller="Clientes" asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
