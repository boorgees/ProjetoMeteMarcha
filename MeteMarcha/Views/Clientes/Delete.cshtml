@model MeteMarcha.Models.Clientes.ClienteModel;

<div class="container">
    <h3>Excluir Cliente</h3>
    <p>Tem certeza de que deseja excluir o cliente? <strong>@Model.Nome</strong>?</p>

    <form asp-controller="Clientes" asp-action="Record" method="post" onsubmit="return confirm('Tem certeza que deseja excluir este cliente?');">
        <input type="hidden" asp-for="ID" />
        <button type="submit" name="type" value="delete" class="btn btn-danger">Excluir</button>
        <a asp-controller="Clientes" asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>