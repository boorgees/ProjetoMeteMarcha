@model MeteMarcha.Models.Pecas.PecaModel;

<div class="container">
    <h3>@(Model.ID > 0 ? "Editar Peça" : "Nova Peça")</h3>

    <form asp-controller="Pecas" asp-action="Record" method="post">
        <input type="hidden" asp-for="ID" />

        <!-- Nome da Peça -->
        <div class="mb-3">
            <label class="form-label">Nome da Peça</label>
            <input type="text" asp-for="Nome" class="form-control" required />
        </div>

        <!-- Preço da Peça -->
        <div class="mb-3">
            <label class="form-label">Preço</label>
            <input type="number" asp-for="Preco" class="form-control" step="0.01" min="0" required />
        </div>

        <button type="submit" name="type" value="save" class="btn btn-success">Salvar</button>
        <a asp-controller="Pecas" asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
