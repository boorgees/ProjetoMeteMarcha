@model MeteMarcha.Models.Fornecedores.FornecedorModel

@{
    ViewData["Title"] = Model.ID > 0 ? "Editar Fornecedor" : "Novo Fornecedor";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <form asp-controller="Fornecedores" asp-action="Record" method="post">
        <input type="hidden" asp-for="ID" />

        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Cnpj" class="control-label"></label>
            <input asp-for="Cnpj" class="form-control" />
            <span asp-validation-for="Cnpj" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Contato" class="control-label"></label>
            <input asp-for="Contato" class="form-control" />
            <span asp-validation-for="Contato" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" name="type" value="save" class="btn btn-primary">
                <i class="fas fa-save"></i> Salvar
            </button>

            @if (Model.ID > 0)
            {
                <button type="submit" name="type" value="delete" class="btn btn-danger" onclick="return confirm('Tem certeza que deseja excluir este fornecedor?');">
                    <i class="fas fa-trash"></i> Excluir
                </button>
            }

            <a class="btn btn-secondary" asp-controller="Fornecedores" asp-action="Index">
                <i class="fas fa-arrow-left"></i> Voltar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}